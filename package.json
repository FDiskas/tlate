{
    "name": "tlate",
    "version": "0.0.5",
    "private": true,
    "license": "MIT",
    "description": "It's never to late - keep all your notes and memory privately in one place",
    "scripts": {
        "prestart": "tcm src",
        "start": "ODE_ENV=development vite",
        "prebuild": "tcm src && rimraf ./dist",
        "build": "vite build",
        "prebuild:start": "yarn build",
        "build:start": "serve -s -o -C -n dist",
        "lint": "tslint --project ./tsconfig.json --config ./tslint.json",
        "test": "jest --watch --no-cache",
        "test:ci": "jest --env=jsdom --no-cache --maxWorkers=2",
        "test:coverage": "NODE_ENV=test jest --env=jsdom --no-cache --coverage",
        "prepush": "yarn test:ci -- --notify && yarn lint"
    },
    "devDependencies": {
        "@types/enzyme": "3.1.3",
        "@types/enzyme-to-json": "^1.5.0",
        "@types/jest": "21.1.5",
        "@types/node": "^8.0.47",
        "@types/react": "16.0.20",
        "@types/react-dom": "16.0.2",
        "@types/react-hot-loader": "^3.0.5",
        "@types/react-test-renderer": "^16.0.0",
        "babel-core": "6.26.0",
        "babel-loader": "7.1.2",
        "babel-polyfill": "6.26.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-0": "6.24.1",
        "css-loader": "0.28.7",
        "enzyme": "^3.1.0",
        "enzyme-adapter-react-16": "^1.0.3",
        "enzyme-to-json": "3.2.1",
        "husky": "^0.14.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^21.2.1",
        "json-d-ts": "^1.0.1",
        "json-loader": "0.5.7",
        "prop-types": "15.6.0",
        "raf": "^3.4.0",
        "react-hot-loader": "3.1.1",
        "react-test-renderer": "16.0.0",
        "resolve-url-loader": "^2.2.0",
        "rimraf": "^2.6.2",
        "serve": "6.4.1",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.19.0",
        "stylelint": "8.2.0",
        "stylelint-config-sass-guidelines": "3.1.0",
        "ts-jest": "21.1.4",
        "ts-node": "3.3.0",
        "tslint": "^5.8.0",
        "tslint-react": "3.2.0",
        "tsutils": "^2.12.2",
        "typed-css-modules": "0.3.1",
        "typescript": "4.9.3",
        "typescript-babel-jest": "1.0.5",
        "typings-for-css-modules-loader": "1.7.0",
        "vite": "3.2.4"
    },
    "dependencies": {
        "@ant-design/compatible": "5.0.0",
        "@ant-design/icons": "4.8.0",
        "antd": "5.0.0",
        "firebase": "4.6.1",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "useBabelrc": true
            }
        },
        "setupFiles": [
            "<rootDir>/config/jest/bootstrap.js"
        ],
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "^.+\\.test\\.tsx?$",
        "collectCoverageFrom": [
            "src/**/*.tsx",
            "!src/index.tsx",
            "!<rootDir>/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "moduleNameMapper": {
            "^.+\\.s?css$": "identity-obj-proxy"
        },
        "mapCoverage": true,
        "coverageDirectory": "./coverage/"
    },
    "stylelint": {
        "extends": "stylelint-config-sass-guidelines",
        "rules": {
            "indentation": 4,
            "number-leading-zero": null,
            "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$"
        }
    },
    "reactToolbox": {
        "customProperties": {
            "color-primary-dark": "#607D8B"
        },
        "output": "src/assets/toolbox"
    },
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    }
}
